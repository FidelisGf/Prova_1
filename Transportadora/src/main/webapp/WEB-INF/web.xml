<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Transportadora</display-name>
  <servlet>
  	<servlet-name>cadastrarMotorista</servlet-name>
  	<servlet-class>transportadora.controller.CadastrarMotoristaController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>cadastrarMotorista</servlet-name>
  	<url-pattern>/cadastrarMotorista</url-pattern>
  </servlet-mapping>
   <servlet>
  	<servlet-name>editarMotorista</servlet-name>
  	<servlet-class>transportadora.controller.EditarMotoristaController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>editarMotorista</servlet-name>
  	<url-pattern>/editarMotorista</url-pattern>
  </servlet-mapping>
    <servlet>
  	<servlet-name>deletarMotorista</servlet-name>
  	<servlet-class>transportadora.controller.DeletarMotorista</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>deletarMotorista</servlet-name>
  	<url-pattern>/deletarMotorista</url-pattern>
  </servlet-mapping>
</web-app>